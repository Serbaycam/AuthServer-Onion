{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      // 1. KURAL: Auth (Kimlik) İşlemleri (Aynen kalıyor)
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },

      // 2. KURAL: Laboratuvar Modülleri (YENİ)
      // İstek: https://localhost:5000/api/testmodules
      "lab-modules-route": {
        "ClusterId": "lab-cluster",
        "Match": {
          "Path": "/api/testmodules/{**catch-all}"
        }
      }
    },
    "Clusters": {
      // HEDEF 1: AuthServer (Aynen kalıyor)
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7023"
          }
        }
      },

      // HEDEF 2: Laboratory API (YENİ)
      "lab-cluster": {
        "Destinations": {
          "destination1": {
            // DİKKAT: Aşağıdaki portu Laboratory.API'nin HTTPS portuyla değiştir!
            "Address": "https://localhost:7093"
          }
        }
      }
    }
  }
}
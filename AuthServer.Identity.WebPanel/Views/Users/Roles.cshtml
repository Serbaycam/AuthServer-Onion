@model AuthServer.Identity.WebPanel.Models.Management.AssignRolesVm
@{
    ViewData["Title"] = "Rol Yönetimi";
}

<h2>Rol Yönetimi</h2>
<p><strong>@Model.Email</strong> için rol ataması</p>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@e.ErrorMessage</div>
        }
    </div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <input type="hidden" name="Email" value="@Model.Email" />

    <div class="mb-3">
        <label class="form-label">Roller</label>
        <div class="border rounded p-2">
            @foreach (var r in Model.AllRoles)
            {
                var isChecked = Model.Roles.Contains(r.Name);
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="Roles" value="@r.Name" @(isChecked ? "checked" : "") />
                    <label class="form-check-label">@r.Name</label>
                </div>
            }
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Rolleri Kaydet</button>
    <a class="btn btn-secondary" href="/Users">Geri</a>
</form>

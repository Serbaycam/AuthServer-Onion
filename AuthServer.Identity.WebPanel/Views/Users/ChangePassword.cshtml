@model AuthServer.Identity.WebPanel.Models.Management.AdminChangePasswordVm
@{
    ViewData["Title"] = "Admin Şifre Değiştir";
}

<h2>Admin Şifre Değiştir</h2>
<p><strong>@Model.Email</strong> için yeni şifre belirle</p>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@e.ErrorMessage</div>
        }
    </div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <input type="hidden" name="Email" value="@Model.Email" />

    <div class="mb-3">
        <label class="form-label">Yeni Şifre</label>
        <input class="form-control" type="password" name="NewPassword" />
        <small class="text-muted">En az 6 karakter</small>
    </div>

    <button class="btn btn-warning" type="submit">Şifreyi Güncelle</button>
    <a class="btn btn-secondary" href="/Users">Geri</a>
</form>

@model AuthServer.Identity.WebPanel.Models.CreateUserRequest
@{
    ViewData["Title"] = "Yeni Kullanıcı";
    var allRoles = ViewBag.AllRoles as List<AuthServer.Identity.WebPanel.Models.RoleDto> ?? new();
}

<h3>Yeni Kullanıcı</h3>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input class="form-control" asp-for="FirstName" />
    </div>
    <div class="mb-3">
        <label class="form-label">Soyad</label>
        <input class="form-control" asp-for="LastName" />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="mb-3">
        <label class="form-label">Şifre</label>
        <input class="form-control" asp-for="Password" type="password" />
    </div>

    <div class="mb-3">
        <label class="form-label">Roller</label>
        <div class="d-flex flex-wrap gap-3">
            @foreach (var r in allRoles)
            {
                <label class="form-check">
                    <input class="form-check-input" type="checkbox" name="Roles" value="@r.Name" />
                    <span class="form-check-label">@r.Name</span>
                </label>
            }
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Kaydet</button>
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</form>

<div class="text-danger mt-3">
    @Html.ValidationSummary()
</div>

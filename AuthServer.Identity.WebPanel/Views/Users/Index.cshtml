@model List<AuthServer.Identity.WebPanel.Models.UserWithRolesDto>
@{
    ViewData["Title"] = "Kullanıcılar";
}

@if (TempData["Ok"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["Err"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Kullanıcılar</h3>
    <a class="btn btn-primary" asp-action="Create">Yeni Kullanıcı</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Durum</th>
            <th>Roller</th>
            <th style="width: 320px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>
                    @if (u.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {

                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>
                <td>@string.Join(", ", u.Roles ?? new List<string>())</td>
                <td class="d-flex gap-2">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@u.Id">Düzenle</a>
                    <a class="btn btn-sm btn-outline-warning" asp-action="Roles" asp-route-id="@u.Id">Roller</a>
                    <a class="btn btn-sm btn-outline-dark" asp-action="ChangePassword" asp-route-id="@u.Id">Şifre</a>

                    <form asp-action="ToggleActive" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@u.Id" />
                        <input type="hidden" name="currentIsActive" value="@(u.IsActive ? "true" : "false")" />
                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                            @(u.IsActive ? "Pasif Yap" : "Aktif Yap")
                        </button>
                    </form>

                    <form asp-action="RevokeAll" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@u.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">Oturum Kapat</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

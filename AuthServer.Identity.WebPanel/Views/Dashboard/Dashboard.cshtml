@model AuthServer.Identity.WebPanel.Models.DashboardStatsDto

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark">Genel Bakış</h2>
            <p class="text-muted mb-0">Sistem durumunu ve son kullanıcı hareketlerini buradan izleyebilirsiniz.</p>
        </div>
        <a href="@Url.Action("Dashboard")" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-arrow-clockwise me-1"></i> Yenile
        </a>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> İstatistik verilerine şu anda ulaşılamıyor.
        </div>
    }
    else
    {
        <div class="row g-3 mb-4">
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm border-0 border-start border-primary border-4 h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <span class="text-muted small text-uppercase fw-bold">Toplam Kullanıcı</span>
                                <h3 class="mb-0 fw-bold text-primary">@Model.TotalUsers</h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                <i class="bi bi-people-fill fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm border-0 border-start border-success border-4 h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <span class="text-muted small text-uppercase fw-bold">Aktif Üyeler</span>
                                <h3 class="mb-0 fw-bold text-success">@Model.ActiveUsers</h3>
                            </div>
                            <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                                <i class="bi bi-person-check-fill fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm border-0 border-start border-secondary border-4 h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <span class="text-muted small text-uppercase fw-bold">Pasif Üyeler</span>
                                <h3 class="mb-0 fw-bold text-secondary">@Model.PassiveUsers</h3>
                            </div>
                            <div class="bg-secondary bg-opacity-10 p-3 rounded-circle text-secondary">
                                <i class="bi bi-person-dash-fill fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm border-0 border-start border-warning border-4 h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <span class="text-muted small text-uppercase fw-bold">Canlı Oturumlar</span>
                                <h3 class="mb-0 fw-bold text-warning">@Model.TotalActiveSessions</h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                                <i class="bi bi-lightning-charge-fill fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom-0">
                <h5 class="mb-0 fw-bold text-dark">
                    <i class="bi bi-activity me-2 text-primary"></i> Son Aktiviteler
                </h5>
                <span class="badge bg-light text-dark border">Son 5 Kayıt</span>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary small text-uppercase">
                        <tr>
                            <th scope="col" class="ps-4">Kullanıcı</th>
                            <th scope="col">İşlem</th>
                            <th scope="col">IP Adresi</th>
                            <th scope="col">Tarih</th>
                            <th scope="col" class="text-end pe-4">Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.LatestActivities != null && Model.LatestActivities.Any())
                        {
                            foreach (var log in Model.LatestActivities)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                @log.UserEmail.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@log.UserEmail</div>
                                                <div class="small text-muted">User ID: @log.UserEmail.GetHashCode()</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @{
                                            var badgeClass = log.Action switch
                                            {
                                                                    "Login" => "bg-success",
                                                                    "Logout" => "bg-secondary",
                                                                    "KillSession" => "bg-danger",
                                                                    "UpdateRole" => "bg-warning text-dark",
                                                _ => "bg-info"
                                            };
                                        }
                                        <span class="badge @badgeClass rounded-pill">@log.Action</span>
                                    </td>
                                    <td class="text-muted font-monospace small">
                                        <i class="bi bi-hdd-network me-1"></i> @log.IpAddress
                                    </td>
                                    <td class="text-muted">
                                        <i class="bi bi-calendar3 me-1"></i> @log.Date.ToString("dd.MM.yyyy")
                                        <span class="ms-1 small text-secondary">@log.Date.ToString("HH:mm")</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-light text-secondary" title="Detay">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    Henüz kaydedilmiş bir aktivite bulunmuyor.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer bg-white border-top-0 py-3 text-center">
                <a href="#" class="text-decoration-none text-primary small fw-bold">Tüm Kayıtları Gör <i class="bi bi-arrow-right ms-1"></i></a>
            </div>
        </div>
    }
</div>
@model AuthServer.Identity.WebPanel.Models.Management.UpdateRoleVm
@{
    ViewData["Title"] = "Rol Düzenle";
}

<h2>Rol Düzenle</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@e.ErrorMessage</div>
        }
    </div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="RoleId" value="@Model.RoleId" />

    <div class="mb-3">
        <label class="form-label">Yeni Rol Adı</label>
        <input class="form-control" name="NewRoleName" value="@Model.NewRoleName" />
    </div>

    <button class="btn btn-primary" type="submit">Kaydet</button>
    <a class="btn btn-secondary" href="/Roles">İptal</a>
</form>
